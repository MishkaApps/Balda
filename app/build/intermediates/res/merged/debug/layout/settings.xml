<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.firstapp.Activities.SettingsActivity">

    <LinearLayout
        android:id="@+id/lytSettingsActivityBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:background="@color/activityBackground"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lytSettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/darkGrayAppColor"
                android:orientation="horizontal">


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textColor="@color/textColorWhite"
                    android:textSize="@dimen/textSize1"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button_menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:layout_weight="0.1"
                        android:background="@drawable/menu_black"
                        android:tag="@string/iconTagMenu" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytGameSettingsBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text_view_first_word"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/first_word"
                        android:textColor="@color/textColorWhite"
                        android:textSize="@dimen/textSize2"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal">


                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <!--<Button-->
                            <!--android:id="@+id/button_change_word"-->
                            <!--android:layout_width="24dp"-->
                            <!--android:layout_height="24dp"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_weight="1"-->
                            <!--android:background="@drawable/new_change_word" />-->


                            <Button
                                android:id="@+id/button_change_word"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/change_word"
                                android:tag="@string/iconTagUpdateWord" />

                            <!--<view-->
                            <!--android:id="@+id/button_change_word"-->
                            <!--android:layout_width="1dp"-->
                            <!--android:layout_height="match_parent"-->
                            <!--class="mikhailbolgov.balda.SquareButton"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:background="@drawable/change_word" />-->
                        </FrameLayout>

                        <!--<view-->
                        <!--android:id="@+id/tvFirstWord"-->
                        <!--class="mikhailbolgov.balda.TextField"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="3"-->
                        <!--android:gravity="center"-->
                        <!--android:textColor="@color/textColor"-->
                        <!--android:background="@drawable/text_view_background_black" />-->
                        <TextView
                            android:id="@+id/tvFirstWord"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:tag="@string/tagLinefulDrawable"
                            android:background="@drawable/text_view_background_dark_text"
                            android:gravity="center"
                            android:textColor="@color/textColor" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/firstWordBackspace"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/backspace"
                            android:tag="@string/iconTagBackspace" />
                    </FrameLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:tag="@string/tagLinefulColor"
                        android:background="@color/separator_color" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1" />

                    <TextView
                        android:id="@+id/text_view_players"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="@string/string_players"
                        android:textColor="@color/textColorWhite"
                        android:textSize="@dimen/textSize2"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1">

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.6"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Space
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_weight="2"
                                    android:gravity="left|center_vertical"
                                    android:text="@string/string_player_1"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSize2" />

                                <TextView
                                    android:id="@+id/player1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:height="20dp"
                                    android:background="@drawable/text_view_background_dark_text"
                                    android:gravity="center"
                                    android:text="@string/text_view_name1"
                                    android:tag="@string/tagLinefulDrawable"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSize3" />

                            </LinearLayout>

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.6"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:orientation="horizontal">

                                <Space
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:gravity="left|center_vertical"
                                    android:text="@string/string_player_2"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSize2" />

                                <TextView
                                    android:id="@+id/player2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:height="20dp"
                                    android:tag="@string/tagLinefulDrawable"
                                    android:background="@drawable/text_view_background_dark_text"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="@string/text_view_name2"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSize3" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/player1Backspace"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/backspace"
                                android:tag="@string/iconTagBackspace" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/btn_swap"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/swap_names"
                                android:tag="@string/iconTagSwap" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/player2Backspace"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/backspace"
                                android:tag="@string/iconTagBackspace" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:tag="@string/tagLinefulColor"
                        android:background="@color/separator_color" />
                </FrameLayout>

                <TextView
                    android:id="@+id/text_view_additional_settings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/additionalSettings"
                    android:textColor="@color/textColorWhite"
                    android:textSize="@dimen/textSize2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/mode_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="left|center_vertical|center"
                        android:text="@string/string_game_mode"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize2" />

                    <CheckBox
                        android:id="@+id/pvc_mode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/game_with_computer"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize3"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2" />

                <ViewSwitcher
                    android:id="@+id/gameModeSwitcher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6">

                    <LinearLayout
                        android:id="@+id/timeChooseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tvSettingsTimeChooser"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="left|center_vertical"
                            android:text="@string/time_for_move"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textSize2" />

                        <Spinner
                            android:id="@+id/timeChooser"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/difficultyChooseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tvSettingsDifficultyChooser"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="left|center_vertical"
                            android:text="@string/game_difficulty"
                            android:textSize="@dimen/textSize2" />

                        <Spinner
                            android:id="@+id/difficultyChooser"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right" />
                    </LinearLayout>
                </ViewSwitcher>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2" />

            </LinearLayout>


            <Button
                android:id="@+id/btnSettingsOk"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:nestedScrollingEnabled="false"
                android:text="@string/button_ok"
                android:textColor="@color/textColorWhite" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:transitionGroup="false">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.4" />

        <LinearLayout
            android:id="@+id/keyboardLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.6"
            android:orientation="vertical">

            <fragment
                android:id="@+id/setting_keyboard"
                android:name="mikhailbolgov.balda.Fragments.Keyboard"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:tag="keyboard"
                tools:layout="@layout/keyboard" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
